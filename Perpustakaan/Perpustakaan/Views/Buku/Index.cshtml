@model IEnumerable<Perpustakaan.Models.Buku>

<h2>Data Buku</h2>

<form method="get" class="mb-3">
    <input type="text" name="search" class="form-control" placeholder="Cari Buku" />
</form>

<a href="/Buku/Create" class="btn btn-primary">Tambah Buku</a>
<a href="/Buku/Export" class="btn btn-primary">Export</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Judul</th>
            <th>Penulis</th>
            <th>Jenis Buku</th>
            <th>Tanggal Rilis</th>
            <th>Jumlah Halaman</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Judul</td>
                <td>@item.Penulis</td>
                <td>@item.JenisBuku?.JenisBuku</td>
                <td>@item.TanggalRilis.ToString("yyyy-MM-dd")</td>
                <td>@item.JumlahHalaman</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Buku/Edit/@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Buku/Delete/@item.Id"
                       onclick="return confirm('Yakin hapus?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>